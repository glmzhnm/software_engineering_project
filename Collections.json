    {
      "name": "Countries (/api/country)",
      "item": [
        {
          "name": "Create Country (USA)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "// Если сервер возвращает ID в ответе, сохраняем его",
                  "if(jsonData && jsonData.id) {",
                  "    pm.collectionVariables.set(\"newCountryId\", jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"nameDto\": \"USA\",\n    \"populationDto\": 331000000,\n    \"continent\": \"North America\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/country",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "country"
              ]
            },
            "description": "Внимание на поля: nameDto, populationDto, но continent (без Dto)!"
          }
        },
        {
          "name": "Get All Countries",
          "request": {
